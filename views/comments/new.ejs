<%- include("../header") %> 
<section class="my-5">
    <h1 style="text-align: center">Add New Comments to <%= campground.name %></h1>
<div class="container">
      <div class="row">
            <!-- <h1 style="text-align: center;">Create a New Campground</h1> -->
            
            <div style="width: 30%; margin: 50px auto;">
                  <form action="/campgrounds/<%= campground.id%>/comments" method="POST">
                        <div class="form-group">
                          <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                        </div>
                        
                       
                        <div class="form-group">
                          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                  </form>
                  <a href="/campgrounds">BACK</a>
            </div>        
      </div>
</div>
</section>
<%- include("../footer") %>